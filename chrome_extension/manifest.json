{
  "manifest_version": 3,
  "name": "Be More Nice Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage", "scripting", "webNavigation"]
}
